<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    tools:context=".units">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="19dp"
            android:text="Unit Converter"
            android:textColor="#fff"
            android:textSize="40dp" />

        <View
            android:layout_width="200dp"
            android:layout_height="1sp"
            android:layout_marginLeft="106dp"
            android:layout_marginTop="75dp"
            android:background="#4023" />

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#ffff"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="120dp"
            android:layout_height="200dp" >

            <EditText
                android:id="@+id/unitLenght"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:hint="UNIT"
                android:background="@drawable/background_edittext"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="17dp"
                android:padding="10dp"
                android:textColor="#00ACE0"
                android:textColorHint="#00ACE0"/>

            <Spinner
                android:id="@+id/spinner_lenght"
                android:layout_width="320dp"
                android:layout_marginTop="115dp"
                android:padding="10dp"
                android:layout_marginLeft="17dp"
                android:layout_height="70dp" />

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/unit_button"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/ic_group_4"
            android:gravity="center" />


        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            app:cardBackgroundColor="#ffff"
            app:cardCornerRadius="12dp"
            android:id="@+id/card"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="480dp"
            android:layout_height="match_parent" >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:textColor="#00ACE0"
                        android:textSize="23dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Lenght Measurement"
                        />


                </LinearLayout>





        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/card"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="40dp"
                app:cardBackgroundColor="#ffff"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="Millimeter"
                        android:textColor="#00ACE0"
                        android:textSize="23dp" />

                    <TextView
                        android:id="@+id/milli"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:text="0000000"
                        android:layout_marginLeft="-140dp"
                        android:textColor="#00ACE0"
                        android:textSize="23dp" />




                </LinearLayout>



                    <View
                        android:layout_width="300dp"
                        android:layout_height="1sp"
                        android:layout_marginLeft="9dp"
                        android:background="#4023" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="Centimeter"
                            android:textColor="#00ACE0"
                            android:textSize="23dp" />

                        <TextView
                            android:id="@+id/cm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:text="0000000"
                            android:layout_marginLeft="-140dp"
                            android:textColor="#00ACE0"
                            android:textSize="23dp" />


                    </LinearLayout>



                    <View
                        android:layout_width="300dp"
                        android:layout_height="1sp"
                        android:layout_marginLeft="9dp"
                        android:background="#4023" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="Meter"
                            android:textColor="#00ACE0"
                            android:textSize="23dp" />

                        <TextView
                            android:id="@+id/metre"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:text="0000000"
                            android:layout_marginLeft="-140dp"
                            android:textColor="#00ACE0"
                            android:textSize="23dp" />


                    </LinearLayout>



                    <View
                        android:layout_width="300dp"
                        android:layout_height="1sp"
                        android:layout_marginLeft="9dp"
                        android:background="#4023" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="Kilometer"
                            android:textColor="#00ACE0"
                            android:textSize="23dp" />

                        <TextView
                            android:id="@+id/kilometre"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:text="0000000"
                            android:layout_marginLeft="-140dp"
                            android:textColor="#00ACE0"
                            android:textSize="23dp" />


                    </LinearLayout>




                    <View
                        android:layout_width="300dp"
                        android:layout_height="1sp"
                        android:layout_marginLeft="9dp"
                        android:background="#4023" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="Mile"
                            android:textColor="#00ACE0"
                            android:textSize="23dp" />

                        <TextView
                            android:id="@+id/mile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:text="0000000"
                            android:layout_marginLeft="-140dp"
                            android:textColor="#00ACE0"
                            android:textSize="23dp" />


                    </LinearLayout>



                    <View
                        android:layout_width="300dp"
                        android:layout_height="1sp"
                        android:layout_marginLeft="9dp"
                        android:background="#4023" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="Foot"
                            android:textColor="#00ACE0"
                            android:textSize="23dp" />

                        <TextView
                            android:id="@+id/foot"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:text="0000000"
                            android:layout_marginLeft="-140dp"
                            android:textColor="#00ACE0"
                            android:textSize="23dp" />


                    </LinearLayout>



                    <View
                        android:layout_width="300dp"
                        android:layout_height="1sp"
                        android:layout_marginLeft="9dp"
                        android:background="#4023" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="Inch"
                            android:textColor="#00ACE0"
                            android:textSize="23dp" />

                        <TextView
                            android:id="@+id/inch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:text="0000000"
                            android:layout_marginLeft="-140dp"
                            android:textColor="#00ACE0"
                            android:textSize="23dp" />


                    </LinearLayout>



                    <View
                        android:layout_width="300dp"
                        android:layout_height="1sp"
                        android:layout_marginLeft="9dp"
                        android:background="#4023" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="Yard"
                            android:textColor="#00ACE0"
                            android:textSize="23dp" />

                        <TextView
                            android:id="@+id/yard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:text="0000000"
                            android:layout_marginLeft="-140dp"
                            android:textColor="#00ACE0"
                            android:textSize="23dp" />


                    </LinearLayout>



                    <View
                        android:layout_width="300dp"
                        android:layout_height="1sp"
                        android:layout_marginLeft="9dp"
                        android:background="#4023" />



                </LinearLayout>






            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </RelativeLayout>








</ScrollView>