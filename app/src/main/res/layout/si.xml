<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_bg"
    android:layout_height="match_parent"
    tools:context=".si">

    <TextView
        android:id="@+id/rt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIMPLE INTEREST"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textSize="23dp"
        />

    <TextView
        android:id="@+id/siby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Percent"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="55dp"

        />

    <View
        android:layout_width="200dp"
        android:layout_height="1sp"
        android:id="@+id/line"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="106dp"
        android:layout_marginLeft="106dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="105dp"
        android:background="#4023" />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:background="#B0C4DE"
        android:layout_width="380dp"
        android:orientation="horizontal"
        android:layout_marginTop="90dp"
        android:layout_height="70dp">

        <TextView
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Principle"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="#fff"
            android:textSize="28dp"
            />

        <EditText
            android:id="@+id/principle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Money in Rupees"
            android:padding="9dp"
            android:textAlignment="center"
            android:textColorHint="#fff"
            android:layout_marginLeft="30dp"
            android:background="@drawable/edit_text"
            android:layout_gravity="center"
            android:textColor="#fff"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="160dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="34dp"
            android:text="Rate "
            android:textAlignment="textStart"
            android:textColor="#fff"
            android:textSize="28dp" />

        <EditText
            android:id="@+id/rate_spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="76dp"
            android:background="@drawable/edit_text"
            android:hint="Rupees/Percentage"
            android:padding="9dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <Spinner
            android:id="@+id/sp_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:background="#B0C4DE"
        android:layout_marginTop="230dp"
        android:layout_height="wrap_content">

        <TextView
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_gravity="center"
            android:layout_marginLeft="34dp"
            android:textColor="#fff"
            android:textSize="28dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/year"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Year"
                android:padding="9dp"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textColorHint="#fff"
                android:layout_marginLeft="19dp"
                android:background="@drawable/edit_text"
                android:layout_gravity="center"
                android:textColor="#fff"/>

            <EditText
            android:id="@+id/months"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Month"
            android:padding="9dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textColorHint="#fff"
            android:layout_marginLeft="19dp"
            android:background="@drawable/edit_text"
            android:layout_gravity="center"
            android:textColor="#fff"/>

            <EditText
                android:id="@+id/days"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Days"
                android:padding="9dp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textColorHint="#fff"
                android:layout_marginLeft="19dp"
                android:background="@drawable/edit_text"
                android:layout_gravity="center"
                android:textColor="#fff"/>




        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/converter"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="420dp"
        android:gravity="center"
        android:textSize="23dp"
        android:text="Calculate" />

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_marginLeft="15dp"
        android:layout_height="150dp"
        android:elevation="34dp"
        android:layout_marginTop="500dp" >


        <TextView
            android:id="@+id/result_si"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Interest Result Here"
            android:textColor="@color/design_default_color_primary"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="28dp" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>